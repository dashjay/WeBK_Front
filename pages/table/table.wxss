/* pages/table/table.wxss */

.flex-item {
	width: 120rpx;
}

.kcb-item {
	position: absolute;
	justify-content: center;
	display: flex;
	align-items: center;
}

.smalltext {
	padding: 8rpx 8rpx 8rpx 8rpx;
	font-size: 10pt;
	color: #fff;
}

.smallcut {
	display: -webkit-box;
	padding: 8rpx 8rpx 8rpx 8rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}

.top-style {
	display: flex;
	flex-direction: row;
	/* margin-left: 35rpx; */
	background-color: #eee;
	border-radius: 10rpx;
}

.top-text {
	width: 160rpx;
	height: 100rpx;
	margin-left: 25rpx;
	font-size: 11pt;
	justify-content: center;
	text-align: center;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.full-table {
	height: 1000rpx;
	width: 600rpx;
	display: flex;
}

.left-num-bar {
	background-color: #eee;
	color: #000;
	border-radius: 10rpx;
}

.left-num {
	display: flex;
	width: 40rpx;
	height: 180rpx;
	font-size: 9pt;
	justify-content: center;
	align-items: center;
}

.left {
	width: 35rpx;
	height: 100rpx;
	font-size: 9pt;
	justify-content: center;
	display: flex;
	align-items: center;
}


.divLine {
	height: 100%;
	position: absolute;
	/* border-radius: 3rpx; */
	border-right: 5rpx dashed #b6b8b1;
	width: 5rpx;
}

